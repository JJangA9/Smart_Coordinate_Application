<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/floor"
        />

    <ImageView
        android:id="@+id/realcloset"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:scaleType="fitXY"
        android:src="@drawable/closet2"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="40dp"
        />

    <ImageView
        android:id="@+id/capture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp" />

    <ImageView
        android:id="@+id/dbRead"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/capture" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="100dp"
        android:text="camera" />

    <Button
        android:id="@+id/albumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="100dp"
        android:text="album" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/IPAddress"
        android:text="192.168.219.106"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:id="@+id/portNumber"
        android:text="7001"/>

    <Button
        android:id="@+id/connectServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Connect to Server"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Message from the Server ..."
        android:id="@+id/responseText"/>

</RelativeLayout>
