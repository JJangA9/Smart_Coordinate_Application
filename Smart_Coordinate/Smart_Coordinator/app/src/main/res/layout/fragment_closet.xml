<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/home7" />

    <ImageView
        android:id="@+id/desk"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="360dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/desk" />

    <ImageView
        android:id="@+id/light"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="102dp"
        android:src="@drawable/arroundlight"
        android:layout_marginStart="244dp"/>


    <ImageView
        android:id="@+id/cat"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/cat2" />

    <ImageView
        android:id="@+id/shelves"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/shelves" />

    <ImageView
        android:id="@+id/realcloset"
        android:layout_width="280dp"
        android:layout_height="370dp"
        android:scaleType="fitXY"
        android:src="@drawable/closet2"
        android:layout_marginTop="240dp"
        android:layout_marginStart="50dp"
        />

    <ImageView
        android:id="@+id/clothesImage"
        android:layout_width="230dp"
        android:layout_height="290dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/clothes" />

    <TextView
        android:id="@+id/clickTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Light !"
        android:textSize="13sp"
        android:textColor="#000000"
        android:fontFamily="@font/gcmedium"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:layout_marginStart="280dp"/>

    <Button
        android:id="@+id/closetBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00ff0000"
        android:textColor="#000000"
        android:layout_marginStart="244dp"
        android:layout_marginTop="102dp"/>

</RelativeLayout>
