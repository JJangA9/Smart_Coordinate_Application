<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/customFirstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select situation"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/r_btn1"
            android:text="학교"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"/>

        <RadioButton
            android:id="@+id/r_btn2"
            android:text="나들이"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"/>

        <RadioButton
            android:id="@+id/r_btn3"
            android:text="데이트"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"/>

        <RadioButton
            android:id="@+id/r_btn4"
            android:text="결혼식"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/dialog_cancelBtn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E5E5E"
        android:text="CANCEL"
        android:textColor="#A9A6AB"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_below="@id/customFirstLayout"/>

    <Button
        android:id="@+id/dialog_okBtn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E5E5E"
        android:text="OK"
        android:textColor="#4DB7C3"
        android:layout_toEndOf="@id/dialog_cancelBtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/customFirstLayout"/>

</RelativeLayout>
